<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>Todo List: </h1>

    <ol class="todoItems">
        <% items.forEach(item => { %>
            <li class="item">
             
                <%  if(item.thing === true) {%>
                    <span class="completed  todo-text"><%= item.thing %></span>
                <% } else{ %>
                    <span class="todo-text"><%= item.thing %></span>
               <% } %>
       
                <!-- Text of the todo item -->
                <!-- <span class="todo-text"><%= item.thing %></span> -->
                <!-- Like button -->
                <span class="fa fa-thumbs-up"><%= item.likes %></span>
                <!-- Edit button (Pen icon) -->  
                <span class="fa fa-edit" data-id="<%= item._id %>"></span>
                <!-- Delete button -->
                <span class="fa fa-trash"></span>
 </li>
        <% }) %>
    </ol>


    <h2>Left to do: <%= left %></h2>

    <h2>Add A Todo:</h2>

    <form action="/addTodo" method="POST">
        <input type="text" placeholder="Things To Do" name="todoItem">
        <input class="butn" type="submit">
    </form>

  
    
    <script src='js/main.js'></script>
</body>
</html>
